<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.lsp4e.languageServer">
      <server
            class="com.redhat.eclipseide.jdtlsclient.InProcessJDTLSConnectionProvider"
            clientImpl="com.redhat.eclipseide.jdtlsclient.JDTLSLanguageClient"
            id="com.redhat.eclipseide.jdtlsclient.inProcessServer"
            label="JDT-LS (in process)"
            singleton="true"/>
      <server
            class="com.redhat.eclipseide.jdtlsclient.JDTLSProductConnectionProvider"
            clientImpl="JDTLSLanguageClientImpl"
            id="com.redhat.eclipseide.jdtlsclient.extenalServer"
            label="JDT-LS (extenal)"
            singleton="true"/>
      <contentTypeMapping
            contentType="org.eclipse.jdt.core.javaSource"
            id="com.redhat.eclipseide.jdtlsclient.inProcessServer"
            languageId="java">
      </contentTypeMapping>
      <contentTypeMapping
            contentType="com.redhat.eclipseide.jdtlsclient.classWithSource"
            id="com.redhat.eclipseide.jdtlsclient.inProcessServer"
            languageId="java">
      </contentTypeMapping>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editorContentTypeBinding
            contentTypeId="org.eclipse.jdt.core.javaSource"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
      <editorContentTypeBinding
            contentTypeId="com.redhat.eclipseide.jdtlsclient.classWithSource"
            editorId="org.eclipse.ui.genericeditor.GenericEditor">
      </editorContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.tm4e.registry.grammars">
      <grammar
            path="grammars/java.tmLanguage.json"
            scopeName="source.java">
      </grammar>
      <scopeNameContentTypeBinding
            contentTypeId="org.eclipse.jdt.core.javaSource"
            scopeName="source.java">
      </scopeNameContentTypeBinding>
      <scopeNameContentTypeBinding
            contentTypeId="com.redhat.eclipseide.jdtlsclient.classWithSource"
            scopeName="source.java">
      </scopeNameContentTypeBinding>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.presentationReconcilers">
      <presentationReconciler
            class="org.eclipse.tm4e.ui.text.TMPresentationReconciler"
            contentType="org.eclipse.jdt.core.javaSource">
      </presentationReconciler>
      <presentationReconciler
            class="org.eclipse.tm4e.ui.text.TMPresentationReconciler"
            contentType="com.redhat.eclipseide.jdtlsclient.classWithSource">
      </presentationReconciler>
   </extension>
   <extension
         point="org.eclipse.tm4e.languageconfiguration.languageConfigurations">
      <languageConfiguration
            contentTypeId="org.eclipse.jdt.core.javaSource"
            path="grammars/java.languageConfiguration.jsonc">
      </languageConfiguration>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.redhat.eclipseide.jdtlsclient.JDTLSPrefrencesPage"
            id="com.redhat.eclipseide.jdtlsclient"
            name="JDT Language Server">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonFilter
            activeByDefault="true"
            class="com.redhat.eclipseide.jdtlsclient.FilterJDTLSProjectInNavigator"
            id="com.redhat.eclipseide.jdtlsclient.filter.jdtlsproject"
            name="JDT-LS internal project"
            visibleInUI="true">
      </commonFilter>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="com.redhat.eclipseide.jdtlsclient.filter.jdtlsproject">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.core.filesystem.filesystems">
      <filesystem
            scheme="jdt">
         <run
               class="com.redhat.eclipseide.jdtlsclient.JDTFileSystem">
         </run>
      </filesystem>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            file-extensions="class"
            id="com.redhat.eclipseide.jdtlsclient.classWithSource"
            name="Class (source)"
            priority="normal">
      </content-type>
   </extension>
   <extension
         point="org.eclipse.ui.genericeditor.icons">
      <icon
            contentType="org.eclipse.jdt.core.javaSource"
            icon="icons/javaSourceEditorIcon.png">
      </icon>
      <icon
            contentType="com.redhat.eclipseide.jdtlsclient.classWithSource"
            icon="icons/javaClassEditorIcon.png">
      </icon>
   </extension>
   <extension point="org.eclipse.core.runtime.adapters">
          <factory
            class="com.redhat.eclipseide.jdtlsclient.ToggleBreakpointAdapterFactory"
            adaptableType="org.eclipse.ui.internal.genericeditor.ExtensionBasedTextEditor">
            <!--adapter type="org.eclipse.debug.ui.actions.IRunToLineTarget"/-->
            <adapter type="org.eclipse.debug.ui.actions.IToggleBreakpointsTarget"/>
         </factory>
   </extension>
</plugin>
